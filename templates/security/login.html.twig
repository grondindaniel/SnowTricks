{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% block nav %}
        {{ parent() }}
    {% endblock %}
    <header class="masthead2" style="height: 1000px;">
        <div class="container h-50">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end" style="color: white;">
                    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center;" id="lab">Login</h1>
                    <hr class="divider my-4" />
                    <label for="inputUsername">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                    <br>
                    <label for="inputPassword" id="lab">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <hr class="divider my-4" />
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </div>
            </div>
            <div class="forgot" style="position: relative; text-align: center;">
                <a href="{{ path('app_login') }}" style="color: white;" >Forgot Password ?</a>
            </div>
        </div>
    </header>
</form>
{% endblock %}
