{% extends 'base.html.twig' %}

{% block body %}
    {% block nav %}
        {{ parent() }}
    {% endblock %}
    <header class="masthead3" style="height: 1000px;">
        <div class="container h-50">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end" style="color: white;">
                    <h3 class="h3 mb-3 font-weight-normal" style="text-align: center;" id="lab">enter your username to receive a modification link by email</h3>
                    <hr class="divider my-4" />
                    {{ form_start(usernameForm) }}
                    {{ form_row(usernameForm.username) }}
                    <button class="btn btn-lg btn-primary" type="submit">
                        Send
                    </button>
                    {{ form_end(usernameForm) }}
                </div>
            </div>
        </div>
    </header>
{% endblock %}


