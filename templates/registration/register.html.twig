{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% block nav %}
        {{ parent() }}
    {% endblock %}
    <header class="masthead" style="height: 1000px;">
        <div class="container h-50">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end" style="color: white;">
                    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center;" id="lab">Register</h1>

                    <hr class="divider my-4" />
                    {% for flashError in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}

                    <button class="btn btn-lg btn-primary" type="submit">
                        Create an account
                    </button>
                    {{ form_end(registrationForm) }}

                </div>
            </div>
            <div class="forgot" style="position: relative; text-align: center; top: 10px;">
                <a href="{{ path('app_login') }}" style="color: white; position: relative;" >Already an account ?</a>
            </div>
        </div>

    </header>

{% endblock %}
